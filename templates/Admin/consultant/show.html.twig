{% extends 'layouts/app.html.twig' %}

{% block body %}
	<h1>Consultant</h1>
	<table id="datatable" class="table table-bordered dt-responsive nowrap w-100">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ consultant.id }}</td>
			</tr>
			<tr>
				<th>Competences</th>
				<td>{{ consultant.competences }}</td>
			</tr>
			<tr>
				<th>Disponibilite</th>
				<td>{{ consultant.disponibilite ? consultant.disponibilite|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Cv</th>
				<td>{{ consultant.cv }}</td>
			</tr>
			<tr>
				<th>Description_profil</th>
				<td>{{ consultant.descriptionProfil }}</td>
			</tr>
		</tbody>
	</table>
	<div class="mt-3">
		<a href="{{ path('app_consultant_index') }}" class="btn btn-secondary me-2">Back to list</a>
		<a href="{{ path('app_consultant_edit', {'id': consultant.id}) }}" class="btn btn-primary me-2">Edit</a>
		<form method="post" action="{{ path('app_consultant_delete', {'id': consultant.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" style="display: inline;">
			<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ consultant.id) }}">
			<button type="submit" class="btn btn-danger">Delete</button>
		</form>
	</div>
{% endblock %}
