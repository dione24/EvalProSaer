{% extends "layouts/app.html.twig" %}
{% block title %}
	Liste des  Rapports
{% endblock %}
{% block body %}

	<!-- start page title -->
	<div class="row">
		<div class="col-12">
			<div class="page-title-box d-sm-flex align-items-center justify-content-between">
				<h4 class="mb-sm-0 font-size-18">
					Liste des Rapports
				</h4>
				<div class="page-title-right">
					<ol class="breadcrumb m-0">
						<li class="breadcrumb-item">
							<a href="javascript: void(0);">
								Rapports
							</a>
						</li>
						<li class="breadcrumb-item active">
							Index
						</li>
					</ol>
				</div>
			</div>
		</div>
	</div>
	<!-- end page title -->

	<div class="row">
		<div class="col-12">
			<div class="card">
				<div class="card-body">
					<a href="{{ path('app_rapport_new') }}" class="btn btn-primary waves-effect waves-light mb-3">
						<i class="mdi mdi-plus me-2"></i>
						Ajouter un nouveau rapport
					</a>
					<table id="datatable" class="table table-bordered dt-responsive nowrap w-100">
						<thead>
							<tr>
								<th>Id</th>
								<th>Periode</th>
								<th>Realisations</th>
								<th>Difficultes</th>
								<th>Propositions_innovation</th>
								<th>Auto_evaluation</th>
								<th>Evaluation_responsable</th>
								<th>actions</th>
							</tr>
						</thead>
						<tbody>
							{% for rapport in rapports %}
								<tr>
									<td>{{ rapport.id }}</td>
									<td>{{ rapport.periode ? rapport.periode|date('Y-m-d') : '' }}</td>
									<td>{{ rapport.realisations }}</td>
									<td>{{ rapport.difficultes }}</td>
									<td>{{ rapport.propositionsInnovation }}</td>
									<td>{{ rapport.autoEvaluation }}</td>
									<td>{{ rapport.evaluationResponsable }}</td>
									<td>
										<div class="d-flex">
											<a href="{{ path('app_rapport_show', {'id': rapport.id}) }}" class="btn btn-primary waves-effect waves-light me-2">
												<i class="mdi mdi-eye"></i>
											</a>
											<a href="{{ path('app_rapport_edit', {'id': rapport.id}) }}" class="btn btn-warning waves-effect waves-light me-2">
												<i class="mdi mdi-pencil"></i>
											</a>
											<form method="post" action="{{ path('app_rapport_delete', {'id': rapport.id}) }}" onsubmit="return confirm('Voulez vous vraiment supprimer ce rapport?');" style="display: inline;">
												<input type="hidden" name="_method" value="DELETE">
												<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ rapport.id) }}">
												<button type="submit" class="btn btn-danger waves-effect waves-light">
													<i class="mdi mdi-trash-can"></i>
												</button>
											</form>
										</div>


									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="8">no records found</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>

				</div>
			</div>
		</div>
	</div>
{% endblock %}
