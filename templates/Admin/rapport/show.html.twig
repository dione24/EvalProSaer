{% extends 'layouts/app.html.twig' %}


{% block body %}
	<h1>Rapport</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ rapport.id }}</td>
			</tr>
			<tr>
				<th>Periode</th>
				<td>{{ rapport.periode ? rapport.periode|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Perspectives</th>
				<td>{{ rapport.perspectives }}</td>
			</tr>
		</tbody>
	</table>
	<div class="mt-3">
		<a href="{{ path('app_rapport_index') }}" class="btn btn-secondary me-2">Back to list</a>
		<a href="{{ path('app_rapport_edit', {'id': rapport.id}) }}" class="btn btn-primary me-2">Edit</a>
		<form method="post" action="{{ path('app_rapport_delete', {'id': rapport.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" style="display: inline;">
			<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ rapport.id) }}">
			<button type="submit" class="btn btn-danger">Delete</button>
		</form>
	</div>
{% endblock %}
